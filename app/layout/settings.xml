<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relativelayout1"
        android:layout_height="200dp"
        android:background="@color/blue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:fontFamily="@font/bungee"
            android:text="PROFILE"
            android:textColor="@color/white"
            android:textSize="40sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/settings_linearlayout1"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="-100dp"
        android:layout_below="@+id/relativelayout1">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/white"
            android:layout_weight="1"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:padding="5dp">

                <TextView
                    android:id="@+id/settings_profiletextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="PROFILE"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/settings_profiletextview">

                    <ImageView
                        android:id="@+id/settings_profileimage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bottommenu_profile_foreground" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="0dp">

                        <TextView
                            android:id="@+id/settings_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bungee"
                            android:includeFontPadding="false"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/settings_fullname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/settings_username"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="5dp"
                            android:includeFontPadding="false"
                            android:textColor="@color/black"
                            android:textSize="12dp" />


                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/settings_button_funds"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_linearlayout1"
        android:layout_alignParentLeft="false"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#00000000"
        android:clickable="true"
        android:fontFamily="@font/allerta"
        android:includeFontPadding="false"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        android:padding="12dp"
        android:text="HISTORY"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:cornerRadius="10dp"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/settings_button_settings"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_button_funds"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#00000000"
        android:clickable="true"
        android:fontFamily="@font/allerta"
        android:includeFontPadding="false"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        android:padding="12dp"
        android:text="SETTINGS"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:cornerRadius="10dp"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/settings_button_support"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_button_settings"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#00000000"
        android:clickable="true"
        android:fontFamily="@font/allerta"
        android:includeFontPadding="false"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        android:padding="12dp"
        android:text="SUPPORT"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:cornerRadius="10dp"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/logout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#00000000"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"

        android:text="LOGOUT"
        android:textColor="@color/black"
        app:cornerRadius="5dp"
        app:strokeColor="@color/black"
        app:strokeWidth="3dp" />

</RelativeLayout>
